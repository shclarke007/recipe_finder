<div class="container flex flex-col items-center justify-center">
  <h1 class="text-3xl font-bold mb-5">Find Recipes</h1>

  <%= form_with model: @search, url: search_recipes_path, method: :get, local: true do |form| %>
    <div class="block text-gray-700 text-sm font-bold mb-2">
      <%= form.label :ingredients, "Ingredients (comma-separated):" %>
    </div>

    <div class="relative flex items-center">
      <div class="shadow  border border-gray-400 rounded w-full py-2 px-8 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-4">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="absolute w-5 h-5 top-2.5 left-2.5 text-slate-600">
          <path fill-rule="evenodd" d="M10.5 3.75a6.75 6.75 0 1 0 0 13.5 6.75 6.75 0 0 0 0-13.5ZM2.25 10.5a8.25 8.25 0 1 1 14.59 5.28l4.69 4.69a.75.75 0 1 1-1.06 1.06l-4.69-4.69A8.25 8.25 0 0 1 2.25 10.5Z" clip-rule="evenodd" />
        </svg>
        <%= form.text_field :ingredients, size: 50 %>
      </div>
    </div>

    <div class="relative text-gray-700 text-sm font-bold mb-2">
      <%= form.label :category, "Category:" %>
    </div>
    <div class="block appearance-none w-full bg-white border border-gray-400 hover:border-gray-500 px-4 py-2 pr-8 rounded shadow leading-tight focus:outline-none focus:shadow-outline">
      <%= form.select :category, options_for_select(@categories) %>
    </div>

    <button class="bg-blue-500 hover:bg-blue-400 text-white font-bold py-2 px-4 border-b-4 border-blue-700 hover:border-blue-500 rounded mt-8">
      <%= form.submit "Search" %>
    </button>
  <% end %>
</div
